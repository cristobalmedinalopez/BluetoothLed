<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:background="#FFFFFF">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_weight="1" android:gravity="center" android:layout_height="wrap_content" android:layout_width="match_parent">
        <ImageView android:id="@+id/led1" android:layout_weight="1" android:layout_height="wrap_content" android:src="@drawable/ledoff" android:layout_width="wrap_content" android:onClick="pulsarLed1"></ImageView>
        <ImageView android:id="@+id/led2" android:layout_weight="1" android:layout_height="wrap_content" android:src="@drawable/ledoff" android:layout_width="wrap_content" android:onClick="pulsarLed2"></ImageView>
        <ImageView android:id="@+id/led3" android:layout_weight="1" android:layout_height="wrap_content" android:src="@drawable/ledoff" android:layout_width="wrap_content" android:onClick="pulsarLed3"></ImageView>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout2" android:layout_weight="3" android:layout_height="wrap_content" android:layout_width="match_parent">
        <Button android:text="Conectar" android:layout_weight="1" android:id="@+id/button3" android:onClick="Conectar" android:layout_height="wrap_content" android:layout_width="wrap_content"></Button>
        <Button android:text="Desconectar" android:layout_weight="1" android:id="@+id/button1" android:onClick="Desconectar" android:layout_height="wrap_content" android:layout_width="wrap_content"></Button>
    </LinearLayout>
</LinearLayout>
